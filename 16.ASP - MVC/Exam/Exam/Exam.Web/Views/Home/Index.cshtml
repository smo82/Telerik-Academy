@model IEnumerable<Exam.Web.Models.TicketViewModel>

@{
    ViewBag.Title = "Home Page";
}

<div class="row-fluid">
    @for (int i = 0; i < Model.Count(); i++)
    {
        var ticket = Model.ElementAt(i);
        <div class="span4">
            <h2>@ticket.Title</h2>
            <strong>Category:</strong> @ticket.CategoryName
            <br />
            <strong>Author:</strong> @ticket.AuthorName
            <br />
            @ticket.NumberOfComments comment(s)
            <p><a class="btn" href="@Url.Action("Details", "Tickets", new { ticket.TicketId })">More details...</a></p>
        </div>

        if (i > 0 && (i + 1) % 3 == 0)
        {
        @:</div>
        @:<div class="row-fluid">
        }
    }
</div>