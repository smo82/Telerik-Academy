@model Exam.Web.Models.TicketDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2>@Model.Title</h2>
<h3>Category: @Model.CategoryName</h3>


<div class="row">
    <div class="span4">
        <div><strong>Author:</strong> @Model.AuthorName</div>
        <div><strong>Priority:</strong> @Model.Priority</div>
    </div>
    <div class="span4">
        @if (Model.ScreenShotURL != null)
        {
            <img src="@Model.ScreenShotURL" alt="@Model.Title" />
        }
    </div>
    <div class="span4">
        @if (Model.Description != null)
        {
            <div><strong>Description:</strong> @Model.Description</div>
        }
    </div>
</div>

<div>
    @if (User.Identity.IsAuthenticated)
    {
        using (Ajax.BeginForm("PostComment", new AjaxOptions { HttpMethod = "Post", InsertionMode = InsertionMode.InsertAfter, UpdateTargetId = "Comments", OnFailure = "commentPostFailure", OnSuccess = "commentPostSuccess" }))
        {
            @Html.Hidden("TicketId", Model.TicketId)
            @Html.TextArea("comment")
            @Html.AntiForgeryToken()
            <br />
            <input type="submit" value="Submit comment" />
        }
    }
</div>
<br />
<div id="Comments">
    @foreach (var comment in Model.Comments)
    {
        @Html.Partial("_CommentPartial", comment)
    }
</div>

@section scripts{
    <script>
        function commentPostSuccess() {
            $("#comment").val("");
        }

        function commentPostFailure() {
            alert("Error");
        }

        function hideVoteButton() {
            $("#vote-button").hide();
        }
    </script>
}