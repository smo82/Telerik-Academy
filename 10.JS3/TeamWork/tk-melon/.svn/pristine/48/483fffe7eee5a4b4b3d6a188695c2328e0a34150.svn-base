    <script type="text/javascript">
(function () {
    // Temp class implementations
    function User(data) {
        this.id = data.id;
        this.name = data.name;
        this.email = data.email;
        this.avatar = data.avatar;
    }

    function Project(data) {
        this.id = data.id;
        this.ownerid = data.owner;
        this.title = data.title;
        this.description = data.description;
    }

    // Knockout custom bindings
    ko.bindingHandlers.bootstrapPopover = {
        init: function(element, valueAccessor, allBindingsAccessor, viewModel) {
            var options = ko.utils.unwrapObservable(valueAccessor());
            var defaultOptions = {
                animation : true,
                trigger : 'hover',
                placement : 'bottom'
            };
            options = $.extend(true, {}, defaultOptions, options);
            $(element).popover(options);
        }
    };

    ko.bindingHandlers.stopBinding = {
        init: function() {
            return { controlsDescendantBindings: true };
        }
    };

    // Allow bindgin start/stop mechanism
    ko.virtualElements.allowedBindings.stopBinding = true;

    // View-Models
    function NavigationViewModel() {
        var self = this;
        self.sections = ['users', 'projects', 'calendar'];
        self.chosenSection = ko.observable();
        self.userLogged = ko.observable(false);

        self.goToSection = function (section) {
            location.hash = section;
        }
        self.displaySection = function (section) {
            // TODO: optimize
            $('.section').fadeOut(0);
            $('#' + section).fadeIn(200);
        }
        self.updateUser = function () {
            $.ajax({
                type: 'POST',
                url: 'ss/controller.php',
                data: {
                    action: 'getUserId'
                }
            }).done(function (response) {
                if (response.success) {
                    self.userLogged(true);
                } else {
                    self.userLogged(false);
                }
            });
        }

        // Logged user initial check
        self.updateUser();

        Sammy(function () {
            this.get('#:section', function() {
                self.chosenSection(this.params.section);
                self.displaySection(this.params.section);
            });

            this.get('#projects/:projectName', function() {
                // TODO:
            });
        
            // Default
            this.get('', function () {
                this.app.runRoute('get', '#overview')
            });

        }).run();    
    }

    function UserInfoViewModel() {
        var self = this;
        self.alabala = ko.observable(5);
        self.userInfo = ko.observable();

        $.post('ss/controller.php', { action: 'getUser', avatarSize: '200' }, function (response) {
            if (response.success)
            {
                self.userInfo(new User(response.data));
                self.alabala(10);
            }
        });
    }

    function ListAllUsersViewModel() {
        var self = this;
        self.usersList = ko.observableArray([]);

        $.getJSON('ss/controller.php', { action: 'getAllUsers' }, function (response) {
            if (response.success)
            {
                var mappedUsers = $.map(response.data, function (data) {
                    return new User(data)
                });
                self.usersList(mappedUsers);
            }
        });
    }

    function ListAllProjectsViewModel() {
        var self = this;
        self.projectsList = ko.observableArray([]);

        $.getJSON('ss/controller.php', { action: 'getAllProjects' }, function (response) {
            if (response.success)
            {
                var mappedProjects = $.map(response.data, function (data) {
                    return new Project(data)
                });
                self.projectsList(mappedProjects);
            }
        });
    }

    // View-Model instances
    var allProjectsViewModel = new ListAllProjectsViewModel();
    var allUsersViewModel = new ListAllUsersViewModel();
    var userViewModel = new UserInfoViewModel();
    var navViewModel = new NavigationViewModel();

    //
    // REGISTRATION FORM
    //
    var delay = 500,
        $regName = $('#regName'),
        $regMail = $('#regEmail'),
        $regPass = $('#regPassword'),
        $regAlert = $('#regAlert'),
        $regMsg = $('#regMessage'),
        $regSubmit = $('#regSubmit'),
        $regClose = $('#regClose');

    $regSubmit.on('click', function (ev) {
        ev.preventDefault();

        $.ajax({
            type: 'POST',
            url: 'ss/controller.php',
            data: {
                action: 'register',
                name : $regName.val(),
                email : $regMail.val(),
                password : $regPass.val()
             }
        }).done(function (response) {
            $regMsg.text(response.message);

            if (response.error) {
                $regAlert.addClass('alert-error');
                $regAlert.fadeIn(delay);
                $regName.focus();
            } else if (response.success) {
                $regAlert.removeClass('alert-error');
                $regAlert.addClass('alert-success');
                $regAlert.fadeIn(delay);
                $regSubmit.hide(); 
            }
        });
    });

    $regClose.on('click', function () {
        setTimeout(function () {
            $regAlert.removeClass('alert-error');
            $regAlert.removeClass('alert-success');
            $regAlert.hide();
            $regSubmit.show()
        }, delay);
    });

    //
    // LOGIN FORM
    //
    var $logForm = $('#loginForm'),
        $logMail = $('#loginMail'),
        $logPass = $('#loginPass'),
        $logSubmit = $('#loginBtnSubmit');

    $logSubmit.popover({
        animation : true,
        placement : 'bottom',
        trigger : 'manual',
        content : 'Invalid Email or Password..'
    });

    $logForm.on('click', function (ev) {
        ev.preventDefault();
        
        switch (ev.target.id) {
            case 'loginBtnSubmit':
                $.ajax({
                    type: 'POST',
                    url: 'ss/controller.php',
                    data: {
                        action: 'login',
                        email : $logMail.val(),
                        password : $logPass.val()
                    }
                }).done(function (response) {
                    if (response.error) {
                        $logSubmit.popover('show');
                    }
                    else
                    {
                        navViewModel.userLogged(true);
                    }
                });
                break;

            default :
                $logSubmit.popover('hide');
                break;
        }
    });

    //
    // LOGOUT FORM
    //
    var $logoutForm = $('#logoutForm'),
        $logoutSubmit = $('#logoutBtnSubmit');

    $logoutSubmit.on('click', function (ev) {
        ev.preventDefault();
        
        $.ajax({
            type: 'POST',
            url: 'ss/controller.php',
            data: {
                action: 'logout'
            }
        }).done(function (response) {
            if (response.success) {
                navViewModel.userLogged(false);
            }
        });
    });

    //
    // VIEW MODEL BINDINGS
    //
    ko.applyBindings(navViewModel);
    ko.applyBindings(userViewModel, $('#userInfo')[0]);
    ko.applyBindings(allUsersViewModel, $('#users')[0]);
    ko.applyBindings(allProjectsViewModel, $('#projects')[0]);
}());
    </script>
</body>
